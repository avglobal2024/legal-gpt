{
  "openapi": "3.1.0",
  "info": {
    "title": "Acciones GPT Legal Cannabis PR",
    "version": "1.0.0",
    "description": "Simulaci\u00f3n de acciones legales para GPT experto en derecho civil y cannabis medicinal en Puerto Rico."
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com"
    }
  ],
  "paths": {
    "/generate-pdf": {
      "post": {
        "summary": "Genera un documento PDF en formato legal",
        "operationId": "generatePDF",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "contenido": {
                    "type": "string"
                  },
                  "nombreDocumento": {
                    "type": "string"
                  }
                },
                "required": [
                  "contenido",
                  "nombreDocumento"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "PDF generado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/validar-dominio": {
      "get": {
        "summary": "Eval\u00faa si un dominio cumple con DMARC/SPF/DKIM",
        "operationId": "validarDominio",
        "parameters": [
          {
            "name": "dominio",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados de seguridad del dominio",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "cumple": {
                      "type": "boolean"
                    },
                    "detalles": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/crear-reclamo": {
      "post": {
        "summary": "Redacta un reclamo extrajudicial con formato legal",
        "operationId": "crearReclamo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "hechos": {
                    "type": "string"
                  },
                  "partes": {
                    "type": "string"
                  },
                  "foro": {
                    "type": "string"
                  }
                },
                "required": [
                  "hechos",
                  "partes",
                  "foro"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reclamo generado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "documento": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/organizar-exhibits": {
      "post": {
        "summary": "Organiza los exhibits legales con sus enlaces y t\u00edtulos",
        "operationId": "organizarExhibits",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "exhibits": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "titulo": {
                          "type": "string"
                        },
                        "url": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "titulo",
                        "url"
                      ]
                    }
                  }
                },
                "required": [
                  "exhibits"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Exhibits organizados exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "formato": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}